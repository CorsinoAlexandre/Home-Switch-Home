<header >
    <div class="navbar navbar-fixed-top" role="navigation"> <!-- Barra de celeste-->
      <div class="container" >
          <%= link_to root_path, class: 'navbar-brand' do %>    <!-- Link a pagina principal (tocando logo o titulo)-->
            <h2 class="header-logo">  <!-- titulo color blanco y logo-->
              <%= image_tag "HSH-Logo.png", title: "Logo", class: "logo" %>
              Home Switch Home
            </h2>
          <% end %>
          <% if flash[:notice] %>
              <div class="alert alert-info">
                <%= notice %>
              </div>
            <% end %>
        </div>
    </div><!--/.nav-collapse -->
</header>
