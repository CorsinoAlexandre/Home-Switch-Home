<h1> <%= @residence.name %> </h1> <!--DESCRIPCION DE UNA RESIDENCIA-->
<p> <%= @residence.desc %> </p>
<h2>Subastas de esta residencia:</h2>
<table class="table">
  <tr>
    <th> Id </th>
    <th> Precio </th>
  </tr>
	<% @auctions.each do |auction| %>
  <tr>
    <td> <%= auction.id %> </td>
    <td> <%= auction.maxbid %> </td>
    <td> <%= link_to "Ingresar", auction, class: 'btn btn-secondary' %> </td>
  </tr>
  <% end %>
</table>
<%= link_to "Volver", residences_path, class: 'btn btn-secondary' %>
