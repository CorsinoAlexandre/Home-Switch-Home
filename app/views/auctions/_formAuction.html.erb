<div class="container">
  <%= form_for @auction do |f| %>

  
  <h2> Para la residencia "<%= @res.name %>"</h2>
  <%= f.hidden_field :residence_id, value: params[:id] %>
  <h2> Para la semana de reserva sea desde <%= Date.commercial(@disp.year, @disp.week) %> hasta el <%= Date.commercial(@disp.year, @disp.week) + 6 %> </h2>
  <%= f.hidden_field :availability_id, value: params[:aid] %>
  <br>
  <div class="form_group">
    <%= f.label :"Puja base:" %>
    <%= f.number_field :maxbid, required: true , min: 0, class: 'form-control' %>
  </div>
  <br>
  <div class="form_group">
    <%= f.label :dateStart, 'Indique la fecha de inicio de la subasta:' %>
    <%= f.date_select :dateStart, start_year: Date.today.year, :use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :order => [:day, :month, :year], required: true, class: 'form-control' %>
  </div>
  <br>

  <%= link_to "Volver", auctions_path, class: 'btn btn-secondary' %>
  <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  <% end %>

</div>
